div.navbar.navbar-static-top(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a(href='/')
        .navbar-logo

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-show="isLoggedIn()", ng-class='{active: isActive("/operations")}')
          a(ng-href='/operations') Operaciones

        li(ng-show='isAdmin()', ng-class='{active: isActive("/products")}')
          a(href='/products') Productos

        li(ng-show='isAdmin()', ng-class='{active: isActive("/users")}')
          a(href='/users') Usuarios

      ul.nav.navbar-nav.navbar-right
        // li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
          a(href='/signup') Sign up

        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
          a.action(href='/login')
            .btn.btn-danger.btn-sm Acceso

        // li(ng-show='isLoggedIn()')
          p.navbar-text Hola {{ getCurrentUser().name }}

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
          a.action(href='/settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
          a.action(href='', ng-click='logout()')
            span.glyphicon.glyphicon-log-out
