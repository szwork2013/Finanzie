div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      .panel.logincard
        .panel-heading
          .login-logo

        .panel-body
          form.form(name='form', ng-submit='login(form)', novalidate='')
            .form-group
              label e-mail
              input.form-control(type='text', name='email', ng-model='user.email')
            .form-group
              label Contrase√±a
              input.form-control(type='password', name='password', ng-model='user.password')

            .form-group.has-error
              p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
                | Please enter your email and password.
              p.help-block {{ errors.other }}

            div
              button.btn.btn-block.btn-danger.btn-login(type='submit')
                | acceder

            hr

            div
              a.btn.btn-block.btn-facebook(href='', ng-click='loginOauth("facebook")')
                i.fa.fa-facebook
                |  Conecta con Facebook
              // = ' '
              // a.btn.btn-block.btn-google-plus(href='', ng-click='loginOauth("google")')
                i.fa.fa-google-plus
                |  Conecta con Google+
              = ' '
              a.btn.btn-block.btn-twitter(href='', ng-click='loginOauth("twitter")')
                i.fa.fa-twitter
                |  Conecta con Twitter
