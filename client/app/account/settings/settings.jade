div(ng-include='"components/navbar/navbar.html"')

.container.newform.statistics
  .row
    .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      .panel
        .panel-heading
          h3 Panel de Control
        .panel-body
          form.form-horizontal
            .form-group.conditions
              label.col-sm-4.control-label Fracciona
              .col-sm-8
                p.mtop-7.mbot-0 50% operaciones
                p.nomar 18 a 83 años
                p.nomar 0 a 40.000€
                p.nomar.alright
                  span  editar
                  |  -
                  span  eliminar
            hr
            .form-group.conditions
              label.col-sm-4.control-label Popular SerFin
              .col-sm-8
                p.mtop-7.mbot-0 30% operaciones
                p.nomar 18 a 80 años
                p.nomar 0 a 50.000€
                p.nomar.alright
                  span  editar
                  |  -
                  span  eliminar
            hr
            .form-group
              label.col-sm-4.control-label(for="name") Nombre
              .col-sm-8
                input#name.form-control(type="text", placeholder="Nombre de la entidad")
            .form-group
              label.col-sm-4.control-label(for="code") Código
              .col-sm-8
                input#code.form-control(type="text", placeholder="Código de la entidad")
            .form-group
              label.col-sm-4.control-label(for="assigned") Asignación
              .col-sm-8
                input#assigned.form-control(type="number", placeholder="Porcentaje de operaciones asignadas")
            .form-group
              label.col-sm-4.control-label(for="age") Edad Máx.
              .col-sm-8
                input#age.form-control(type="number", placeholder="Edad máxima del cliente (años)")
            .form-group
              label.col-sm-4.control-label(for="amount") Importe
              .col-sm-4
                input#amountmin.form-control(type="number", placeholder="Mínimo (€)")
              .col-sm-4
                input#amountmax.form-control(type="number", placeholder="Máximo (€)")
            .form-group
              .col-sm-8.col-sm-offset-4
                button.btn.btn-default.btn-block(ng-click="addEntity()")
                  span.glyphicon.glyphicon-plus
                  |  Añadir Entidad
