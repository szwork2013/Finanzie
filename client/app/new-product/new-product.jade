.container.newform
  .row
    .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      .panel
        .panel-heading
          h3 Nuevo Producto Financiero
        .panel-body
          form.form-horizontal
            .form-group
              label.col-sm-4.control-label(for="term") Plazo
              .col-sm-8
                input#term.form-control(type="number", placeholder="Plazo (meses)")
            .form-group
              label.col-sm-4.control-label(for="interest") Interés
              .col-sm-8
                input#interest.form-control(type="number", placeholder="Tipo de interés anual")
            .form-group
              label.col-sm-4.control-label(for="commission") Comisión
              .col-sm-8
                input#commission.form-control(type="number", placeholder="Comisión de apertura")
            .form-group
              label.col-sm-4.control-label(for="discount") Descuento
              .col-sm-8
                input#discount.form-control(type="number", placeholder="Descuento")
            .form-group
              label.col-sm-4.control-label(for="amount") Importe
              .col-sm-4
                input#amountmin.form-control(type="number", placeholder="Mínimo")
              .col-sm-4
                input#amountmax.form-control(type="number", placeholder="Máximo")
            .form-group
              label.col-sm-4.control-label(for="entities") Entidades
              .col-sm-8
                .checkbox
                  label Fracciona
                    input(type="checkbox")
                .checkbox
                  label Popular SerFin
                    input(type="checkbox")
                .checkbox
                  label Cetelem
                    input(type="checkbox")

            .form-group.nomar
                    .col-xs-12
                      button.btn.btn-danger Guardar
                      button.btn.btn-default Cancelar
